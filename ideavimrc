:set relativenumber
:set number
:set ignorecase
:set clipboard=unnamed
:set showmode
:set scrolloff=8
:set visualbell
:set noerrorbells

# Use SPACE as <Leader>
nnoremap <SPACE> <Nop>
let mapleader=" "

nmap <SPACE> :action ReformatCode<CR> :write<CR>

nmap gh <Action>(QuickJavaDoc)

nmap <Leader>y "+y
nmap <Leader>d "+d
nmap <Leader>P "+P
nmap <Leader>p "+p

vmap <Leader>y "+y
vmap <Leader>d "+d
vmap <Leader>P "+P
vmap <Leader>p "+p
